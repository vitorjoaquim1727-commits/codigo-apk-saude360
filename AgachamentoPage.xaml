<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saude360.pastaTreino.AgachamentoPage"
             Title="Agachamento">


    <ScrollView>
        <VerticalStackLayout  Spacing="20" HorizontalOptions="Center" VerticalOptions="Center" Padding="32, 0">
    

            <Image Source="agachamento.png"/>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Peso"/>
                <Entry WidthRequest="100" x:Name="peso" Keyboard="Numeric"/>

                <Label Text="Série"/>
                <Entry WidthRequest="100" x:Name="serie" Keyboard="Numeric"/>
            </HorizontalStackLayout>

            <Label Text="Repetição" HorizontalTextAlignment="Center"/>
            <Entry HorizontalOptions="Center" WidthRequest="100" x:Name="repeticao" Keyboard="Numeric"/>

            <Button 
                Text="Salvar"
                x:Name="btnSalvar"
                BackgroundColor="BurlyWood"
                Clicked="btnSalvar_Clicked"/>

            <Button 
                Text="Salvar"
                x:Name="btnApagar"
                BackgroundColor="BurlyWood"
                Clicked="btnApagar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>