<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saude360.pastaTreino.ElipticoPage"
             Title="Eliptico">


    <ScrollView>
        <VerticalStackLayout  Spacing="20" HorizontalOptions="Center" VerticalOptions="Center" Padding="32, 0">
        

            <Image Source="eliptico.png"/>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Velocidade"/>
                <Entry WidthRequest="85" x:Name="velocidade" Keyboard="Numeric"/>

                <Label Text="Minutos"/>
                <Entry WidthRequest="85" x:Name="minutos" Keyboard="Numeric"/>
            </HorizontalStackLayout>

            <Button 
                Text="Salvar"
                x:Name="btnSalvar"
                BackgroundColor="BurlyWood"
                Clicked="btnSalvar_Clicked_1"/>

            <Button
                Text="Apagar"
                x:Name="btnApagar"
                BackgroundColor="BurlyWood"
                Clicked="btnApagar_Clicked"
                />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>