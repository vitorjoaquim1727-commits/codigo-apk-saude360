<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saude360.NovaPasta.PercentualDeGordura"
             Title="Percentual de Gordura Corporal">

    <ScrollView>
        <VerticalStackLayout
            Padding="32, 0"
            Spacing="25"
            HorizontalOptions="Center">

         

            <Image Source="mulher.png"/>

            <Label Text="IMC"
                FontAttributes="Bold"/>
            <Entry
                x:Name="txtIMC"
                Keyboard="Numeric"
                Placeholder=""/>

            <Label Text="Idade"
                FontAttributes="Bold"/>
            <Entry 
                x:Name="txtIdade"
                Keyboard="Numeric"/>

            <Label Text="Sexo"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <RadioButton 
                    Content="Homem"
                    x:Name="rbtnHomem"/>
                
                <RadioButton
                    Content="Mulher"
                    x:Name="rbtnMulher"/>
                
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

                <Button Text="Verificar"
                    x:Name="btnCalcular"
                    Clicked="btnCalcular_Clicked"
                    BackgroundColor="BurlyWood"/>

                <Button Text="Apagar"
                    x:Name="btnApagar"
                    Clicked="btnApagar_Clicked"
                    BackgroundColor="BurlyWood"/>
                
            </HorizontalStackLayout>

            <Border WidthRequest="360" HeightRequest="150">

                <ScrollView>
                <Label Text=""
                       x:Name="Resultado"/>
                </ScrollView>
                
            </Border>

            <Button Text="Status"
                x:Name ="btnStatys"
                Clicked="btnStatys_Clicked"
                BackgroundColor="BurlyWood"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>